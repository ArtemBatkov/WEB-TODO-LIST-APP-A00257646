@*
    @Html.DisplayFor(modelItem => item.Content)
*@

@model IEnumerable<TODO.Models.TodoList>

@{
    ViewData["Title"] = "Index";
    ViewData["Done"] = "false";
     
}

<html>

<head>
    
    <style>
        .backimg{
            background-image: url('css/main_bg.svg');
            width:100%;
            height:100%;
            background-repeat: no-repeat;
            background-size: cover;
        }
    </style>
    
</head>

<body>
      
    <div class="container">
    
        <div class="header container" align="center">
            <img src="~/css/mypng.png" alt="Sample Photo" />
             
            <a class="btn btn-success" asp-action="Create">Add new ToDo!</a>
           
        </div>
       
        <hr />

        <div class="table table-responsive w-100 d-block d-md-table">
            <table class="table backimg"  align="center" style="height:100%; width: 100%;">
                <thead>
                    <tr class="align-content-center">
                        <th class="text-white h3  border-1 ps-5">
                            ToDo Content
                        </th>
                        <th class="text-white h3 text-center"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            @*text-decoration-line-through*@
                            <td class="text-black-50 h5  border-1 ps-5 ">
                                    @item.Content
                            </td>
                            <td>
                                @if (!@item.IsDone)
                                {
                                    <a class="btn btn-success ps-4 pe-4 me-2" asp-action="Done" asp-route-id="@item.Id">Done</a> 
                                    <label>|</label>
                                    <a class="btn btn-primary ps-4 pe-4 ms-2 me-2" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                                    <label>|</label>
                                    <a class="btn btn-danger  ps-3 pe-3 ms-2" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                                }                             
                                
                                @if (@item.IsDone)
                                {
                                    <a class="btn btn-danger  ps-5 pe-5 ms-2" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                                    <label class="pe-5 text-light h5 ">Done at @item.date  </label>
                                    
                                    
                                 
                                }

                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    
</body>

</html>


 
    
 



